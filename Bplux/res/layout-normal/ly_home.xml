<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="15dp"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="40dp" >

        <RelativeLayout
            android:id="@+id/lyHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@xml/header_color"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="EMG SENSOR"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <include layout="@layout/header_shadow" />

        <LinearLayout
            android:id="@+id/lyTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shadow"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/ha_title"
                android:textColor="@color/grey"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyTitle"
            android:layout_marginTop="45dp"
            android:orientation="vertical" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@xml/button_selector"
                android:drawableEnd="@drawable/start"
                android:gravity="center"
                android:maxLines="1"
                android:onClick="onClickedStart"
                android:paddingLeft="35dip"
                android:paddingRight="25dip"
                android:text="@string/ha_button1"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="10dp"
                android:background="@xml/button_selector"
                android:drawableEnd="@drawable/browse"
                android:gravity="center"
                android:onClick="onClickedSavedData"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:text="@string/ha_button2"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            
           <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="10dp"
                android:background="@xml/button_selector"
                android:drawableEnd="@drawable/select"
                android:gravity="center"
                
                android:onClick="onClickedConfiguration"
                
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:text="@string/ha_button3"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
                       
           <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="10dp"
                android:background="@xml/button_selector"
                android:drawableEnd="@drawable/right_arrow"
                android:gravity="center"
                android:onClick="onClickedSetPatientName"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:text="@string/ha_button4"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>